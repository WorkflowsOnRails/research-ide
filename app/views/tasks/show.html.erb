<%= render partial: 'banner', locals: {project: @task.project} %>
<%= render partial: 'statusbar', locals: {task: @task, advancable: true} %>
<%= render partial: 'attachments',
           locals: {task: @task, attachments: @attachments} %>

<div class="task-body">
  <%= link_to '[edit]', edit_task_path(@task),
      class: 'task-body-edit-link' %>
  <%= render_markdown @task.content %>
</div>
